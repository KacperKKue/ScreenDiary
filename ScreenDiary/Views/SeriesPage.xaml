<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScreenDiary.Views.SeriesPage"
             xmlns:viewmodels="clr-namespace:ScreenDiary.ViewModels"
             Title="Series">

    <ContentPage.BindingContext>
        <viewmodels:SeriesViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="16" Spacing="12">

        <CollectionView ItemsSource="{Binding Series}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="8" Margin="4" CornerRadius="10" HasShadow="True">
                        <HorizontalStackLayout Spacing="12">

                            <Image Source="{Binding ImageUrl}" WidthRequest="50" HeightRequest="75" />

                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="Rating: {Binding Rating}" FontSize="14"/>
                            </VerticalStackLayout>

                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add TV series" Clicked="AddSeries_Clicked" />

    </VerticalStackLayout>
</ContentPage>