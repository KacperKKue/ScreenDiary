<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScreenDiary.Views.Movies.MovieInfoPage"
             Title="MovieInfoPage">
    
    <ScrollView>
        <VerticalStackLayout 
            Padding="16" 
            Spacing="12">

            <Image 
                Source="{Binding PosterUrl}"
                HeightRequest="300"
                Aspect="AspectFill"/>

            <Label 
                Text="{Binding Movie.Title}"
                FontSize="22"
                FontAttributes="Bold"/>

            <Label 
                Text="{Binding Movie.Overview}" />

            <Label 
                Text="{Binding Movie.VoteAverage,
                StringFormat='Ocena: {0:F1}'}"/>

            <Button 
                Text="Zapisz plakat do filmu"
                Clicked="SavePoster_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>