<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScreenDiary.Views.Movies.AddMoviePage"
             xmlns:viewmodels="clr-namespace:ScreenDiary.ViewModels.Movies"
             Title="Add movie">
    
    <ContentPage.BindingContext>
        <viewmodels:AddMovieViewModel />
    </ContentPage.BindingContext>

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="True" />
    </Shell.BackButtonBehavior>

    <Grid 
        RowDefinitions="*,Auto"
        Padding="12">

        <ScrollView>
            <VerticalStackLayout 
                Padding="16" 
                Spacing="12">

                <Entry 
                    Placeholder="Tytuł filmu"
                    Text="{Binding Title}" />

                <Entry 
                    Placeholder="URL okładki (opcjonalnie)"
                    Text="{Binding ImageUrl}" />

                <Picker 
                    Title="Status oglądania"
                    ItemsSource="{Binding Statuses}"
                    SelectedItem="{Binding Status}" />

                <Label 
                    Text="Ocena (0–10)" />

                <Slider
                    Minimum="0"
                    Maximum="10"
                    Value="{Binding UserRating}" />

                <CheckBox 
                    IsChecked="{Binding IsFavorite}" />

                <Label 
                    Text="Ulubiony" />

                <Editor 
                    Placeholder="Notatki"
                    AutoSize="TextChanges"
                    Text="{Binding Notes}" />

            </VerticalStackLayout>
        </ScrollView>

        <Button 
            Grid.Row="1"
            Text="Zapisz film"
            Clicked="Save_Clicked" />
        
    </Grid>
</ContentPage>