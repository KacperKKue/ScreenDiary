<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScreenDiary.Views.Movies.MovieSearchPage"
             xmlns:viewmodels="clr-namespace:ScreenDiary.ViewModels.Movies"
             Title="MovieSearchPage">
    
    <ContentPage.BindingContext>
        <viewmodels:MovieSearchViewModel />
    </ContentPage.BindingContext>

    <CollectionView 
        ItemsSource="{Binding Results}"
        SelectionMode="Single"
        SelectionChanged="Movie_Selected">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame 
                    Padding="10" 
                    Margin="6">

                    <VerticalStackLayout>

                        <Label Text="{Binding Title}"
                               FontAttributes="Bold" />

                        <Label 
                            Text="{Binding ReleaseDate}" 
                            FontSize="12"/>

                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>