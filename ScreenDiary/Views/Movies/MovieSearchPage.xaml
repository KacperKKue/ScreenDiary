<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScreenDiary.Views.Movies.MovieSearchPage"
             xmlns:viewmodels="clr-namespace:ScreenDiary.ViewModels.Movies"
             Title="Szukaj filmÃ³w"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <ContentPage.BindingContext>
        <viewmodels:MovieSearchViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *" Padding="0">

        <Border Grid.Row="0" 
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}" 
                StrokeThickness="0" 
                Margin="0,0,0,10">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.1" />
            </Border.Shadow>

            <Grid ColumnDefinitions="*, Auto" Padding="16" ColumnSpacing="10">
                <SearchBar 
                    Grid.Column="0"
                    Placeholder="Wpisz tytuÅ‚ filmu..."
                    Text="{Binding Query}"
                    SearchCommand="{Binding SearchCommand}" />
                <Button 
                    Grid.Column="1"
                    Text="Szukaj"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="45"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    Clicked="Search_Clicked"/>
            </Grid>
        </Border>

        <CollectionView 
            Grid.Row="1"
            ItemsSource="{Binding Results}"
            SelectionMode="Single"
            SelectionChanged="Movie_Selected"
            EmptyView="Wpisz tytuÅ‚, aby rozpoczÄ…Ä‡ wyszukiwanie">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="16,8">
                        <Border StrokeShape="RoundRectangle 12" 
                                StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2C}">

                            <HorizontalStackLayout Spacing="15">
                                <Border StrokeShape="RoundRectangle 12,0,12,0" StrokeThickness="0">
                                    <Image 
                                        Source="{Binding FullPosterUrl}"
                                        WidthRequest="80"
                                        HeightRequest="120"
                                        Aspect="AspectFill" />
                                </Border>

                                <VerticalStackLayout VerticalOptions="Center" Spacing="4" Padding="0,0,10,0">
                                    <Label 
                                        Text="{Binding Title}"
                                        FontSize="18"
                                        FontAttributes="Bold"
                                        LineBreakMode="WordWrap"
                                        MaxLines="2"
                                        TextColor="{AppThemeBinding Light=#212121, Dark=White}"/>

                                    <HorizontalStackLayout Spacing="5">
                                        <Label 
                                            Text="ðŸ“…" 
                                            FontSize="12" 
                                            VerticalOptions="Center"/>
                                        <Label 
                                            Text="{Binding ReleaseDate}"
                                            FontSize="14"
                                            TextColor="Gray"
                                            VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                    <Label 
                                        Text="{Binding Overview}" 
                                        FontSize="12" 
                                        TextColor="Gray" 
                                        LineBreakMode="TailTruncation" 
                                        MaxLines="2" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>