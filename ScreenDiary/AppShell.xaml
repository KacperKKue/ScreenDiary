<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ScreenDiary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ScreenDiary"
    xmlns:views="clr-namespace:ScreenDiary.Views"
    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}"
    Title="ScreenDiary">



    <TabBar>
        <ShellContent 
            Title="Filmy"
            Route="movies"
            Icon="../Icons/videocam.svg"
            ContentTemplate="{DataTemplate views:MoviesPage}">
        </ShellContent>

        <ShellContent 
            Title="Seriale"
            Icon="../Icons/tv_next.png"
            ContentTemplate="{DataTemplate views:SeriesPage}" >
        </ShellContent>

        <ShellContent 
            Title="Profil"
            Icon="../Icons/person.svg"
            ContentTemplate="{DataTemplate views:ProfilePage}">
        </ShellContent>

        <ShellContent 
            Title="Ustawienia"
            Icon="../Icons/settings.svg"
            ContentTemplate="{DataTemplate views:SettingsPage}">
        </ShellContent>

    </TabBar>

</Shell>
